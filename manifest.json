{
    "manifest_version": 3,
    "name": "Summarizer Extension",
    "version": "1.0",
    "description": "A summarizer extension using transformers",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}